# ============================ > normalize_path < ============================ #

function normalize_path {
    init_doc
    init_desc \
        "Normalize a folder / file path"
    init_arg "str" "path" "The path to normalize" "~/path/to/file"

    need_help $@ && return $?

    eval "$(parse_arguments "$@")"

    echo "$(eval "echo "${path}"")"
}

# ────────────────────────────────── <end> ─────────────────────────────────── #